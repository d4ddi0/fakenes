setstdout "${STDOUT_LOG}"
setstderr "${STDERR_LOG}"

@!call "${CC} -E ${BUILD_DIR}/openal.c"

do ifnret 0
   setstdout ''
   setstderr ''

   echo 'you\'re missing one or more of: OpenAL, ALUT'
   echo 'continuing on without them...'

   uninvoke 0
done

setstdout ''
setstderr ''

# --

CFLAGS += ' -DUSE_OPENAL'

# --

LDFLAGS += ' -lOpenAL32 -lalut'
